{
  "name": "{{#scoped}}@{{owner}}/{{/scoped}}{{name}}",
  "productName": "{{_ "startCase" name}}",
  "description": "{{description}}",
  "version": "{{version}}",
  "scripts": {
    "clean:dist": "rimraf dist",
    "clean:releases": "rimraf releases",
    "clean": "npm-run-all -p clean:dist clean:releases",
    "compile": "electron-webpack app",
    "build:mac": "npm run compile && electron-builder --mac",
    "build:win": "npm run compile && electron-builder --win",
    "build:linux": "npm run compile && electron-builder --linux",
    "build:all": "npm run compile && electron-builder -mwl",
    "dev": "electron-webpack dev",
    "prod": "npm run compile && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac dir && open releases/mac/*.app",
    "publish": "electron-builder --publish onTag"
  },
  "electronWebpack": {
    "main": {
      "webpackConfig": "webpack.js"
    },
    "renderer": {
      "webpackConfig": "webpack.js"
    }
  },
  "build": {
    "appId": "com.{{owner}}.{{name}}",
    "copyright": "Copyright Â© {{eval "new Date ().getFullYear ()"}}-present {{author}}",
    "directories": {
      "output": "releases"
    },
    "mac": {
      "target": [
        "dmg",
        "pkg",
        "zip"
      ],
      "category": "public.app-category.utilities",
      "icon": "resources/icon/icon.png",
      "type": "distribution"
    },
    "dmg": {
      "background": "resources/dmg_background/background.png",
      "iconSize": 160,
      "iconTextSize": 12,
      "window": {
        "width": 660,
        "height": 400
      },
      "contents": [
        {
          "x": 180,
          "y": 170,
          "type": "file"
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "pkg": {
      "license": "LICENSE"
    },
    "win": {
      "target": [
        "nsis",
        "portable",
        "zip"
      ],
      "icon": "resources/icon/icon.ico"
    },
    "nsis": {
      "installerIcon": "resources/icon/icon.ico",
      "license": "LICENSE",
      "warningsAsErrors": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "snap"
      ],
      "icon": "resources/icon/icon.png",
      "category": "Utility"
    },
    "snap": {
      "grade": "stable",
      "summary": "{{description}}"
    },
    "publish": {
      "provider": "github",
      "owner": "{{owner}}",
      "releaseType": "release",
      "publishAutoUpdate": true
    }
  },
  "license": "MIT",
  "author": {
    "name": "{{author}}",
    "email": "{{email}}"
  },
  "homepage": "https://github.com/{{owner}}/{{name}}",
  "repository": {
    "type": "git",
    "url": "https://github.com/{{owner}}/{{name}}.git"
  },
  "bugs": {
    "url": "https://github.com/{{owner}}/{{name}}/issues"
  },
  "keywords": [
    "electron",
    "react",
    "webpack"
  ],
  "dependencies": {
    "electron-context-menu": "^0.10.0",
    "electron-debug": "^2.0.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-is": "^3.0.0",
    "electron-localshortcut": "^3.1.0",
    "electron-updater": "^3.1.2",
    "electron-window-state": "^4.1.1",
    "lodash": "^4.17.10",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-hot-loader": "^4.3.5",
    "source-map-support": "^0.5.9"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.0.0",
    "@types/lodash": "^4.14.116",
    "@types/node": "^10.9.4",
    "@types/react": "^16.4.13",
    "@types/react-dom": "^16.0.7",
    "electron": "3.0.0",
    "electron-builder": "^20.28.3",
    "electron-builder-squirrel-windows": "^20.28.3",
    "electron-webpack": "^2.3.1",
    "electron-webpack-ts": "^2.1.1",
    "node-sass": "^4.9.3",
    "sass-loader": "^7.1.0",
    "typescript": "^3.0.3",
    "webpack": "^4.17.1"
  }
}
